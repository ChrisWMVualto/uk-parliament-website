@model UKP.Website.Service.Model.DownloadUrlModel
@{
    ViewBag.Title = "Download Available";
}

@Html.Hidden("DownloadUrl", Model.Url)
<div class="container main-container">
    <br />
    <br />
    <h3>Download Available</h3>
    <br />
    <p>
        Thank you for using <b>parliamentlive.tv</b>. Your download should start automatically. If it does not, <a href="@Model.Url">Click here</a>.
    </p>
    <br />
    <b>It is not possible to download to iOS devices (e.g. Apple iPhones, iPads), we recommend saving to an alternative device.</b>
    <br />
    <br />
</div>

@section scripts{
    <script type="text/javascript">
        setTimeout(startDownload, 2000);

        function startDownload()
        {
            window.location.href = "@Model.Url";
        }
    </script>
}
