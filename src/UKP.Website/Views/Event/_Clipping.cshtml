@model UKP.Website.Models.Event.ClippingViewModel

@Html.Hidden("AllowClippingRefresh", !Model.VideoModel.Event.PublishedStartTime.HasValue)

@{
    var hiddenDateDropdown = "";
}
@if(Model.VideoModel.Event.DisplayStartDate.Date == Model.VideoModel.Event.DisplayEndDate.Date)
{
    hiddenDateDropdown = "hidden";
}

@if(Model.VideoModel.Event.ActualLiveStartTime.HasValue)
{
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="row form-inline time-start-end">
                        <div class="col-md-12 start-time-container">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="" for="startTime">
                                        <h5>Start time:</h5>
                                    </label>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="checkbox" class="checkbox" id="startTimeCheck" />
                                        <label class="hide" for="startTimeCheck">
                                            Start Time Active
                                        </label>
                                    </div>
                                    <div class="form-group start-time">
                                        <span class="bootstrap-timepicker">
                                            @Html.Hidden("hiddenStart", Model.DefaultStartDate.ToLocalTime().TimeOfDay)
                                            <input type="text" class="form-control input-lg time-input" id="startTime" value="@(Model.Start.HasValue ? Model.Start.Value.ToString() : "")" />
                                        </span>
                                    </div>
                                    <div class="form-group start-day">
                                        <label class="hide" for="startClipDate">
                                            <h5>Day:</h5>
                                        </label>
                                        <span class="day-dropdown">
                                            @Html.DropDownList("startClipDate", Model.StartDates, new { @class = "clip-date " + hiddenDateDropdown })
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 end-time-container">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="" for="endTime">
                                        <h5>End time:</h5>
                                    </label>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="checkbox" class="checkbox" id="endTimeCheck" />
                                        <label class="hide" for="endTimeCheck">
                                            End Time Active
                                        </label>
                                    </div>
                                    <div class="form-group end-time">
                                        <span class="bootstrap-timepicker">
                                            @Html.Hidden("hiddenEnd", Model.DefaultEndDate.ToLocalTime().TimeOfDay)
                                            <input type="text" class="form-control input-lg time-input" id="endTime" value="@(Model.End.HasValue ? Model.End.Value.ToString() : "")" />
                                        </span>
                                    </div>

                                    <div class="form-group end-day">
                                        <label class="hide" for="endClipDate">
                                            <h5>Day:</h5>
                                        </label>
                                        <span class="day-dropdown">
                                            @Html.DropDownList("endClipDate", Model.EndDates, new { @class = "clip-date " + hiddenDateDropdown })
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

