@model UKP.Website.Models.HomeViewsModel

<div class="container main-container home-container">
    
    @Html.Partial(MVC.Home.Views._TitleTabs, Model.NowNext)

    <div class="tab-content">
        <div class="tab-pane fade active in" id="commons">

            <!--START:COMMONS CONTENT-->
            <div class="theme-bg theme-commons">
                
                @if (Model.NowNext.Events.Any())
                {
                    @Html.Partial(MVC.Home.Views._NowAndNext)
                }
                
                @Html.Partial(MVC.Home.Views._Guide)
                @Html.Partial(MVC.Home.Views._RecentlyArchived)
                
            </div>
            <!--END:COMMONS CONTENT-->

        </div>
    </div>
</div>