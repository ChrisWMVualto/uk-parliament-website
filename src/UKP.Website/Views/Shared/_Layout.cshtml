    <meta name="msapplication-TileImage" content="@Url.Content("~/Content/img/favicons/metro-tileicon.png")">
    <meta property="og:image" content="@Url.Content("~/Content/img/share.jpg")" />
    <meta property="og:title" content="@ViewBag.FBTitle" />
    <meta property="og:description" content="@ViewBag.Description" />

    @Styles.Render("~/bundles/css")
    <!--[if IE 9]><link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/ie9.css")"><![endif]-->
